#include <stdio.h>

int main() {
   char ch;

   printf("Enter a character: ");
   scanf("%c", &ch);

   // using ternary operator to check whether ch is an alphabet or not
   (ch >= 'A' && ch <= 'Z' || ch >= 'a' && ch <= 'z') ? printf("%c is an alphabet.", ch) : printf("%c is not an alphabet.", ch);

   return 0;
}
output
Enter a character: ch
c is an alphabet
